@using Data_WebApplication2.ViewModels;
@model CreatePersonViewModel

@{
    ViewBag.Title = "Persons";
}

<h3>Edit Person</h3>

<form asp-action="Edit" asp-controller="Person" method="post">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    <div class="form-group row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(m => m.CityId, new { @class = "col-form-label" })
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.CityId, new SelectList(Model.Cities, "Id", "Name"), new { @class = "form-control" })
        </div>
    </div>
    <div class="offset-md-2 col-md-6" style="padding-left: 5px;">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-controller="Person" class="btn btn-secondary">Back</a>
    </div>
</form>

